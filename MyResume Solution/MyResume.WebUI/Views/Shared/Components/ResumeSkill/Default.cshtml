@model IEnumerable<ResumeCategory>


@foreach (var item in Model)
{
    <h6>@item.Name</h6>

    @foreach (var skill in item.ResumeSkills)
    {
        @if (skill.View == null)
        {

            <div class="panel-group accordion" id="accordion5">
                <div class="panel panel-default">
                    <div class="row">
                        <div class="col-sm-4">
                            <!-- PANEL HEADING -->
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse"
                           data-parent="#accordion-@skill.Id"
                           href="#collapse-@skill.Id-5" class="collapsed" aria-expanded="false">
                                        @skill.Name
                                    </a>
                                </h4>
                            </div>
                        </div>

                        <div class="col-sm-8">
                            <div class="progress">
                                <div class="progress-bar"
                         role="progressbar"
                         aria-valuenow="80"
                         aria-valuemin="0"
                         aria-valuemax="100"
                         style="width: @skill.Level%">
                                    <span class="sr-only">@skill.Level% Complete</span>
                                </div>
                            </div>

                            <!-- Skillls Bars -->
                            <!-- Skillls Text -->
                            <div id="collapse-@skill.Id-5"
                     class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                <div class="panel-body">
                                    <p>
                                        @skill.Description.ToPlainText()
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
        else if (skill.View != null)
        {
            <div class="ethical">
                <h6>@skill.ResumeCategory.Name</h6>
                <a href="#.">@skill.Name</a>
            </div>
        }
    }
}

